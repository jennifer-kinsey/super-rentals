{{#if addNewAnnouncement}}
  <div>
    <form>
      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="comment">Comment</label>
        {{input value=comment id="comment"}}
      </div>
      <button class="btn btn-primary"{{action 'saveAnnouncement1'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-success" {{action 'announcementFormShow'}}>Add New Announcement</button>
{{/if}}
